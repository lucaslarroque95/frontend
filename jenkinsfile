pipeline{
    agent any

    tools {
        nodejs "node"
    }

    stages {
        stage('install') {
            steps {
                git branch: 'main', credentialsId: 'github', url: 'https://github.com/lucaslarroque95/frontend.git'
                dir('frontend/app') {
                    sh 'npm install'
                }
            }
        }

        stage('deploy') {
            steps {
                dir('frontend') {
                    sh 'docker-compose up'
                }
            }
        }
    }
}