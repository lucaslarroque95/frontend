pipeline{
    agent any

    tools {
        nodejs "node"
    }

    stages {
        stage('install') {
            steps {
                git branch: 'master', url: 'https://github.com/lucaslarroque95/frontend.git'
                dir('app') {
                    sh 'npm install'
                }
            }
        }
        
        stage('deploy') {
            steps {
                dir('.') {
                    sh 'docker-compose up'
                }
            }
        }
    }
}